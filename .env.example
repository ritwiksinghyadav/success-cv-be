# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
# Replace with your actual PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/successcv

# CORS Configuration
# You can use *.localhost:3000 to allow all subdomains
# Examples: http://localhost:3000, *.localhost:3000, https://app.example.com
ALLOWED_ORIGINS=http://localhost:3000,*.localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Brevo)
BREVO_API_KEY=your-brevo-api-key

# Redis Configuration (for queues, cache, and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_DB_CACHE=0
REDIS_DB_QUEUE=1
REDIS_TLS=false
REDIS_CLUSTER_MODE=false

# Worker Configuration
WORKER_CONCURRENCY=5
PUBSUB_INIT_RETRIES=3
PUBSUB_INIT_DELAY_MS=2000

# Azure Storage (for file uploads)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=your-container-name
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key

# Resume Parser Configuration (Unstructured API)
RESUME_PARSER_URL=https://unstructured.safhire.ai/general/v0/general
UNSTRUCTURED_API_KEY=your-unstructured-api-key

# Production URL (for Swagger)
PRODUCTION_URL=https://api.successcv.com
